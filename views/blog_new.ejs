<% layout('layout') -%>
<h1><%= title %></h1>
<form action="/blog/new" method="post">
	<div>
		<div>
			<span>Title:</span>
			<input type="text" name="txtTitle" id="txtTitle" />
		</div>
		<div>
			<span>Body:</span>
			<textarea name="txtBody" id="txtBody" rows="20"></textarea>
		</div>
		<div id="editArticleSubmit">
			<input type="submit" value="Send" />
		</div>
	</div>
</form>