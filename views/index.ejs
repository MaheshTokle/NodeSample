<% layout('layout') -%>
<h1><%= title %></h1>
<div id="articles">
	<% for(var i=0;i<articles.length;i++){ %>
		<div class="article">
			<div class="created_at"><%= articles[i].created_at %></div>
			<div class="title">
				<a href='blog/<%= articles[i]._id %>'>
	        		<%= articles[i].title %>
	    		</a>
	    	</div>
			<div class="body"><%= articles[i].body %></div>
		</div>
	<% } %>
</div>
<div class="article">
	<a href='blog/new' align="right">Add Blog</a>
</div>
